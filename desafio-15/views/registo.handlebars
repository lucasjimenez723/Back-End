<h2>Registro usuarios:</h2>
<hr>
<form action="/api/sessions/registro" method="post">

    {{#if error}}
        <div style="font-weight: bold; color:red;">{{error}}</div>
    {{/if}}

    {{#if mensaje}}
        <div style="font-weight: bold; color:green;">{{mensaje}}</div>
    {{/if}}

    <input type="text" name="first_name" placeholder="Nombre">
    <input type="text" name="last_name" placeholder="Apellido">
    <input type="email" name="email" placeholder="Email">
    <input type="age" name="age" placeholder="Edad">
    <input type="password" name="password" placeholder="ContraseÃ±a">
    <br>
    <label for="role">Rol:</label>
    <select name="role" id="role">
        <option value="user">Usuario</option>
        <option value="admin">Administrador</option>
    </select>
    <br>
    <input type="submit" value="Registrar">

</form>